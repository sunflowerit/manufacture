<?xml version="1.0"?>
<openerp>
    <data>

        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                    <field name="replace_product_id"/>
                    <field name="replace_product_qty"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_bom_line_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.line.form</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="inside">
                    <field name="bom_type" invisible="1"/>
                    <group string="Product replacement (kits only)" attrs="{'invisible': [('bom_type', '!=', 'phantom')]}">
                        <field name="replace_product_id"/>
                        <field name="replace_product_qty"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
